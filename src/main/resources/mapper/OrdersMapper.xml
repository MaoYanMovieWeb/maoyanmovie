<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hut.maoyanmovie.dao.OrdersMapper">

    <resultMap type="com.hut.maoyanmovie.dao.OrdersMapper" id="OrdersMapper">
        <id property="oid" column="oid"/>
        <result property="uid" column="uid"/>
        <result property="mid" column="mid"/>
        <result property="order_time" column="order_time"/>
    </resultMap>

    <select id="getOrdersByOid" resultMap="OrdersMapper">
        select
            oid,uid,mid,order_time
        from
            orders
        where
            oid=#{oid}
    </select>






</mapper>